<html>
    <head>
        <meta charset="utf-8">
        <title>posting</title>
        <script src="https://kit.fontawesome.com/cefe3c5094.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <!-- <h3 style="letter-spacing:3px; text-align:right; text-shadow: -1px 0 #000, 0 1px #000, 1px 0 #000, 0 -1px #000; color:rgb(236, 236, 236);">posting page</h3> -->
        <div style="background-color:rgb(231, 231, 231); border-radius:10px; margin:3% 5% 5% 5%; height:82%; padding:10px; display:flex; flex-direction:column;">
            <form action='../postingL' method='post' style="margin:auto; height:100%; width:100%;">
                <div style="display:flex; height: 10%;">
                    <button type='submit' onclick="location.href='../postingL'" style="margin-left:auto; background-color:rgb(242, 242, 242); border: 1px solid rgb(176, 176, 176); height:30px; width:80px; margin-right:10px;">등록</button>
                </div>
                <div style=" height:10%; width:100%; ">
                    <div style="display:flex; align-items: center; justify-content:center;">
                        <input type='text' name='title' placeholder="제목" style="padding-left:10px; font-size: 15px; border: 1px rgb(80, 80, 80) solid; height:50px; width:85%; margin-right:2%;">&nbsp;
                        <div style="color:rgb(114, 114, 114); display:table; padding-bottom:5px; width: 15%; margin-top: 5px;">
                            <i class="fas fa-solid fa-user" style="padding-right:7px; display:table-cell; vertical-align:middle;"></i>
                            <input type='text' name='author' placeholder="작성자명" style="border: 1px rgb(80, 80, 80) solid; text-align: center; min-width:100px; height:50px; width:100%; display:table-cell; vertical-align:middle;">  
                        </div>
                    </div>
                </div>
                <div style="height:80%; display:inline-block; width:100%; ">
                    <textarea name="content" placeholder="내용을 입력하세요." style="border: 1px rgb(80, 80, 80) solid; width:100%; height:100%; font-size:15px; padding:10px;"></textarea>
                </div>
                <!-- <input name='content' style="width:700px;height:500px;"></input> -->
                <br>
                <br>
            </form>
        </div>
    </body>
</html>
